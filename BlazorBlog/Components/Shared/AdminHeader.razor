<div class="mb-6 flex items-center justify-between rounded-xl border border-slate-200/60 bg-white px-4 py-3 shadow-soft dark:border-slate-800 dark:bg-slate-900">
    <h5 class="text-lg font-semibold text-slate-800 dark:text-slate-100">@Title</h5>
    <div class="flex items-center gap-2">
        @ActionButtons
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment? ActionButtons { get; set; }
}
