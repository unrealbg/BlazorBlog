@foreach (var post in Posts)
{
    <div class="flex items-start justify-between gap-4 py-4">
        <div class="min-w-0">
            <h2 class="text-lg font-semibold leading-snug">
                @if (!string.IsNullOrWhiteSpace(post.Slug))
                {
                    <a class="text-slate-900 hover:text-brand-600 dark:text-slate-100" href="/posts/@post.Slug">@post.Title</a>
                }
                else
                {
                    <span class="text-slate-900 dark:text-slate-100">@post.Title</span>
                }
            </h2>
            <p class="mt-2 text-slate-600 dark:text-slate-300">
                @post.Introduction
            </p>
            <div class="mt-2 text-sm text-slate-500 dark:text-slate-400">
                @post.AuthorName in <a class="hover:text-brand-600" href="/@post.CategorySlug-posts" title="@post.CategoryName Posts">@post.CategoryName</a>
            </div>
            <small class="mt-1 block text-xs text-slate-400 dark:text-slate-500">@post.PublishedAtDisplay</small>
        </div>
        <img class="h-28 w-28 flex-none rounded-md object-cover" height="120" width="120" src="@post.Image" alt="@post.Title" />
    </div>
}

@code {
    [Parameter, EditorRequired]
    public BlogPostVm[] Posts { get; set; } = [];
}
