@* UnauthorizedAccess.razor *@
<div class="mx-auto max-w-2xl px-4 py-16 text-center">
    <div class="rounded-xl border border-red-200/60 bg-red-50 p-8 shadow-soft dark:border-red-900/60 dark:bg-red-950/30">
        <div class="mx-auto mb-4 inline-grid h-16 w-16 place-items-center rounded-full bg-red-100 text-red-600 dark:bg-red-900/40 dark:text-red-400">
     <svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor" aria-hidden="true">
           <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 11c-.55 0-1-.45-1-1V8c0-.55.45-1 1-1s1 .45 1 1v4c0 .55-.45 1-1 1zm1 4h-2v-2h2v2z"/>
         </svg>
        </div>
        
        <h1 class="mb-2 text-2xl font-bold text-red-900 dark:text-red-200">Access Denied</h1>
        
      <p class="mb-4 text-base text-red-800 dark:text-red-300">
            You do not have permission to access this page.
   </p>
        
        @if (!string.IsNullOrWhiteSpace(RequiredRole))
        {
   <p class="mb-6 text-sm text-red-700 dark:text-red-400">
         This page requires the <strong>@RequiredRole</strong> role.
            </p>
        }
  else
    {
       <p class="mb-6 text-sm text-red-700 dark:text-red-400">
         This page requires special permissions to access.
        </p>
    }
        
        <div class="flex flex-col items-center justify-center gap-3 sm:flex-row">
   <a href="/" class="inline-flex items-center rounded-md bg-brand-600 px-4 py-2 text-sm font-medium text-white hover:bg-brand-700">
  <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
             <path d="M3 12h18M3 12l6-6m-6 6l6 6"/>
                </svg>
          Go to Home
            </a>
        
        <a href="/admin/dashboard" class="inline-flex items-center rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-200 dark:hover:bg-slate-700">
       Dashboard
            </a>
        </div>
      
        <div class="mt-6 text-xs text-red-600 dark:text-red-400">
            If you believe you should have access, please contact your administrator.
  </div>
    </div>
</div>

@code {
 [Parameter]
    public string? RequiredRole { get; set; }
}
