<ol class="space-y-4">
    @foreach (var post in Posts)
    {
        <li class="group">
            <div>
                <h6 class="text-sm font-semibold leading-snug">
                    @if (!string.IsNullOrWhiteSpace(post.Slug))
                    {
                        <a href="/posts/@post.Slug" class="text-slate-900 hover:text-brand-600 dark:text-slate-100">@post.Title</a>
                    }
                    else
                    {
                        <span class="text-slate-900 dark:text-slate-100">@post.Title</span>
                    }
                </h6>
                <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
                    @post.AuthorName in <a class="hover:text-brand-600" href="/@post.CategorySlug-posts" title="@post.CategoryName Posts">@post.CategoryName</a>
                </p>
            </div>
        </li>
    }
</ol>


@code {
    [Parameter, EditorRequired]
    public BlogPostVm[] Posts { get; set; } = [];
}
