@inherits LayoutComponentBase

@layout MainLayout


<div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-12 lg:gap-12">
        <aside class="lg:col-span-3">
            <div class="rounded-xl border border-slate-200/60 bg-white p-4 shadow-soft dark:border-slate-800 dark:bg-slate-900">
                <AuthorizeView>
                    <Authorized>
                        <h6 class="text-center text-sm font-semibold text-slate-700 dark:text-slate-300">Welcome, @context.User.GetUserName()</h6>
                    </Authorized>
                </AuthorizeView>
                <div class="my-4 h-px bg-slate-200/80 dark:bg-slate-800"></div>
                <nav class="space-y-1">
                    <NavLink href="admin/manage-categories" class="block rounded-md px-3 py-2 text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-800" ActiveClass="bg-brand-50 text-brand-700 dark:text-brand-300">Manage Categories</NavLink>
                    <NavLink href="admin/manage-blog-posts" class="block rounded-md px-3 py-2 text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-800" ActiveClass="bg-brand-50 text-brand-700 dark:text-brand-300">Manage Blog Posts</NavLink>
                    <NavLink href="admin/manage-subscribers" class="block rounded-md px-3 py-2 text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-800" ActiveClass="bg-brand-50 text-brand-700 dark:text-brand-300">Manage Subscribers</NavLink>
                </nav>
                <div class="mt-4">
                    <LogoutForm ButtonClasses="inline-flex items-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700" />
                </div>
            </div>
        </aside>
    <section class="lg:col-span-9 lg:border-l lg:border-slate-200/60 lg:pl-8 dark:lg:border-slate-800">
            @Body
        </section>
    </div>
</div>

