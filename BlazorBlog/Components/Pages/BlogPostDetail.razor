@page "/posts/{blogPostSlug}"

<PageTitle>@Utils.GetPageTitle(_blogPost?.Title ?? "")</PageTitle>

@if (_blogPost.Id > 0)
{
    <!-- Reading progress bar (fixed) -->
    <div id="readProgress" class="fixed left-0 top-0 z-[60] h-1 w-0 bg-brand-600"></div>

    <!-- Breadcrumbs -->
    <section class="border-b border-slate-100 bg-slate-50/60 dark:border-slate-900 dark:bg-slate-900/40">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            <nav class="text-sm text-slate-500">
                <a href="/" class="hover:text-brand-600">Home</a>
                <span class="mx-1">/</span>
                @if (!string.IsNullOrWhiteSpace(_categorySlug))
                {
                    <a href="/@_categorySlug-posts" class="hover:text-brand-600">@_categoryName</a>
                    <span class="mx-1">/</span>
                }
                <span class="text-slate-700 dark:text-slate-300">@_blogPost.Title</span>
            </nav>
        </div>
    </section>

    <!-- Hero / intro -->
    <div class="mx-auto max-w-7xl px-4 pt-6 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-12">
            <div class="lg:col-span-8 flex flex-col justify-center">
                <div class="mb-3 flex flex-wrap items-center gap-3 text-xs">
                    @if (!string.IsNullOrWhiteSpace(_categoryName))
                    {
                        <a href="/@_categorySlug-posts" class="rounded-full bg-brand-600/10 px-2 py-1 font-semibold text-brand-700">@_categoryName</a>
                        <span class="text-slate-500">•</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(_publishedAt))
                    {
                        <time class="text-slate-500">@_publishedAt</time>
                        <span class="text-slate-500">•</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(_readTime))
                    {
                        <span class="text-slate-500">@_readTime</span>
                    }
                </div>
                <h1 class="text-3xl font-extrabold tracking-tight sm:text-4xl">@_blogPost.Title</h1>
                @if (!string.IsNullOrWhiteSpace(_blogPost.Introduction))
                {
                    <p class="mt-2 text-lg text-slate-600 dark:text-slate-300">@_blogPost.Introduction</p>
                }

                <!-- Author -->
                <div class="mt-4 flex items-center gap-3">
                    <img class="h-10 w-10 rounded-full" src="https://ui-avatars.com/api/?background=0D8ABC&color=fff&name=@_authorName" width="40" height="40" alt="@_authorName" />
                    <div class="text-sm">
                        <div class="font-semibold">@_authorName</div>
                        <div class="text-slate-500">.NET &amp; IoT Developer</div>
                    </div>
                </div>
            </div>
            <div class="lg:col-span-4"></div>
        </div>
    </div>

    <!-- Article + Sidebar -->
    <div class="mx-auto max-w-7xl px-4 pb-10 sm:px-6 lg:px-8">
        <div class="grid gap-10 lg:grid-cols-12">
            <!-- Article -->
            <article class="lg:col-span-8">
                @if (!string.IsNullOrWhiteSpace(_blogPost.Image))
                {
                    <figure class="my-6 overflow-hidden rounded-2xl">
                        <img class="w-full max-h-[420px] object-cover" src="@_blogPost.Image" alt="@_blogPost.Title" />
                    </figure>
                }

                <div id="post-body" class="prose prose-slate max-w-none dark:prose-invert">
                    @((MarkupString)_blogPost.Content)
                </div>

                <div class="mt-6 flex flex-wrap items-center gap-2">
                    <span class="text-sm text-slate-500">Share:</span>
                    <button class="inline-flex items-center gap-2 rounded-xl border border-slate-200 px-3 py-1.5 text-sm dark:border-slate-800" onclick="share('twitter')">X</button>
                    <button class="inline-flex items-center gap-2 rounded-xl border border-slate-200 px-3 py-1.5 text-sm dark:border-slate-800" onclick="share('linkedin')">LinkedIn</button>
                    <button class="inline-flex items-center gap-2 rounded-xl border border-slate-200 px-3 py-1.5 text-sm dark:border-slate-800" onclick="copyLink()">Copy link</button>
                </div>

                <div class="mt-10">
                    <SubscribeBox />
                </div>

                <div class="mt-10">
                    <h5 class="mb-4 text-base font-semibold tracking-wide text-slate-700 dark:text-slate-300">Read next</h5>
                    <FeaturedBlogPosts Posts="_relatedPosts" />
                </div>
            </article>

            <!-- Sidebar (ToC + author box) -->
            <aside class="lg:col-span-4">
                <div class="sticky top-24 space-y-6">
                    <!-- Table of contents -->
                    <div class="rounded-2xl border border-slate-200 bg-white p-5 dark:border-slate-800 dark:bg-slate-900">
                        <h3 class="text-base font-semibold">On this page</h3>
                        <nav id="toc" class="mt-3 space-y-2 text-sm">
                            <!-- Filled by JS -->
                        </nav>
                    </div>

                    <!-- Author box -->
                    <div class="rounded-2xl border border-slate-200 bg-white p-5 dark:border-slate-800 dark:bg-slate-900">
                        <div class="flex items-center gap-3">
                            <img src="https://ui-avatars.com/api/?background=0D8ABC&color=fff&name=@_authorName" class="h-12 w-12 rounded-full" alt="Author" />
                            <div>
                                <div class="font-semibold">@_authorName</div>
                                <div class="text-sm text-slate-500">Burgas • Bulgaria</div>
                            </div>
                        </div>
                        <p class="mt-3 text-sm text-slate-600 dark:text-slate-300">.NET &amp; IoT developer building Blazor apps and ESP32 devices.</p>
                        <div class="mt-3 flex gap-2">
                            <a href="#" class="rounded-xl bg-brand-600 px-3 py-1.5 text-xs font-semibold text-white">Follow</a>
                            <a href="/about" class="rounded-xl border border-slate-200 px-3 py-1.5 text-xs font-semibold dark:border-slate-800">About</a>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
}

