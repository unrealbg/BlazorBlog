@page "/{categorySlug}-posts"

<PageTitle>@Utils.GetPageTitle(_category?.Name + " Posts")</PageTitle>

<div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-12">
        <div class="lg:col-span-8">
            @if (HasPosts)
            {
                <h5 class="mb-4 text-base font-semibold tracking-wide text-slate-700 dark:text-slate-300">Featured in @_category?.Name</h5>
                <div class="mb-8 overflow-hidden rounded-xl border border-slate-200/60 bg-white shadow-soft dark:border-slate-800 dark:bg-slate-900">
                    <div class="w-full bg-cover bg-center" style="background-image: url(@_featured!.Image); height: 22rem;"></div>
                    <div class="p-6">
                        <h2 class="text-2xl font-bold leading-tight">
                            @if (!string.IsNullOrWhiteSpace(_featured!.Slug))
                            {
                                <a class="text-slate-900 hover:text-brand-600 dark:text-slate-100" href="/posts/@_featured!.Slug">@_featured!.Title</a>
                            }
                            else
                            {
                                <span class="text-slate-900 dark:text-slate-100">@_featured!.Title</span>
                            }
                        </h2>
                        <p class="mt-3 text-slate-600 dark:text-slate-300">
                            @_featured!.Introduction
                        </p>
                        <div class="mt-4 flex items-center gap-3 text-sm text-slate-500 dark:text-slate-400">
                            <small class="font-medium">@_featured!.AuthorName</small>
                            <span aria-hidden="true">•</span>
                            <small>@_featured!.PublishedAtDisplay</small>
                        </div>
                    </div>
                </div>
                <h5 class="mb-4 text-base font-semibold tracking-wide text-slate-700 dark:text-slate-300">Latest</h5>
                <BlogPostList Posts="_recent" />

                <div class="my-6 flex justify-end">
                    <a href="/@CategorySlug-posts/all" class="inline-flex items-center rounded-md border border-brand-600 px-3 py-1 text-sm font-medium text-brand-700 hover:bg-brand-50 dark:text-brand-400">All @_category?.Name Posts</a>
                </div>
            }
            else
            {
                <h5 class="mb-4 text-base font-semibold tracking-wide text-slate-700 dark:text-slate-300">@_category?.Name Posts</h5>
                <div class="m-5 rounded-xl border border-slate-200/60 bg-white p-8 text-center text-xl font-semibold text-slate-700 shadow-soft dark:border-slate-800 dark:bg-slate-900 dark:text-slate-200">
                    There are no posts in this category yet.
                </div>
            }
        </div>

        @if (HasPosts)
        {
            <div class="lg:col-span-4 lg:pl-6">
                <div class="sticky top-24">
                    <h5 class="mb-4 text-base font-semibold tracking-wide text-slate-700 dark:text-slate-300">Popular in @_category?.Name</h5>
                    <PopularBlogPostList Posts="_popular" />
                </div>
            </div>
        }

    </div>
</div>

<div class="mx-auto max-w-7xl px-4 pb-10 sm:px-6 lg:px-8">
    <SubscribeBox />
</div>
