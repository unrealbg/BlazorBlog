@page "/Account/ResetPassword"

<PageTitle>@Utils.GetPageTitle("Reset password")</PageTitle>

<div class="login-viewport">
    <div class="login-card">
        <div class="login-header">
            <h1 class="login-title">Reset password</h1>
            <p class="login-sub">Enter a new password for your account.</p>
        </div>
        <StatusMessage Message="@_statusMessage" />

        <EditForm Model="Input" method="post" OnValidSubmit="ResetAsync" FormName="reset-password">
            <DataAnnotationsValidator />
            <ValidationSummary class="err" role="alert" />

            <div class="input-wrap mb-3">
                <label for="password" class="form-label">New password</label>
                <InputText id="password" type="password" @bind-Value="Input.Password" @bind-Value:event="oninput" class="form-control login-input" aria-required="true" />
                <ValidationMessage For="() => Input.Password" class="err" />
            </div>
            <div class="input-wrap mb-3">
                <label for="confirm" class="form-label">Confirm password</label>
                <InputText id="confirm" type="password" @bind-Value="Input.ConfirmPassword" @bind-Value:event="oninput" class="form-control login-input" aria-required="true" />
                <ValidationMessage For="() => Input.ConfirmPassword" class="err" />
            </div>

            <div class="divider"></div>
            <button type="submit" class="w-100 btn login-btn">Reset password</button>
        </EditForm>
    </div>
</div>
